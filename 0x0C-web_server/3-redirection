#!/usr/bin/env bash
# redirect
sudo apt-get update -y
sudo apt-get install nginx -y
sudo touch /var/www/html/index.html
echo "Holberton School" > /var/www/html/index.html
red_string='rewrite ^/redirect_me/ https://www.youtube.com/watch?v=-6b53mXQYT4 permanent;'
sudo sed -i '/server_name _/a \\t$red_string' /etc/nginx/sites-available/default
sudo service nginx restart
